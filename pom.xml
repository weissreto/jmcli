<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>weiss.ch</groupId>
  <artifactId>jmx-cli</artifactId>
  <version>0.0.2-SNAPSHOT</version>
    <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.6.2</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifestEntries>
              <Automatic-Module-Name>ch.weiss.jmx.client.cli</Automatic-Module-Name>
              <Built-By>Reto Weiss</Built-By>
              <Implementation-Title>${project.artifactId}</Implementation-Title>
              <Implementation-Vendor>Reto Weiss</Implementation-Vendor>
              <Implementation-Version>${project.version}</Implementation-Version>
              <Main-Class>ch.weiss.jmx.client.cli.JmxClientCli</Main-Class>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId> 
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.10</version>
        <executions>
          <execution> 
            <id>thirdparty.libs</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy-dependencies</goal> 
            </goals>
            <configuration>
              <outputDirectory>lib/mvn</outputDirectory>
            </configuration>
          </execution>
          <execution> 
            <id>thirdparty.lib.sources</id>
            <phase>process-sources</phase>
            <goals>
              <goal>copy-dependencies</goal> 
            </goals>
            <configuration>
              <outputDirectory>lib/mvn-src</outputDirectory>
              <classifier>sources</classifier>
              <stripClassifier>true</stripClassifier>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <overWriteReleases>true</overWriteReleases>
          <overWriteSnapshots>true</overWriteSnapshots>
          <overWriteIfNewer>true</overWriteIfNewer>
          <stripVersion>false</stripVersion>
          <excludeArtifactIds>${project.artifactId},${project.artifactId}.source</excludeArtifactIds>
          <includeArtifactIds>
            check,
            ansi-terminal,
            ansi-terminal-for-windows,
            jna,
            jna-platform,
            jmx-client,
            picocli,
            commons-lang3
          </includeArtifactIds>
        </configuration>      
      </plugin>
    </plugins>
  </build>
  
  <dependencies>
    <dependency>
      <groupId>info.picocli</groupId>
      <artifactId>picocli</artifactId>
      <version>2.1.0</version>
    </dependency>
    <dependency>
      <groupId>ch.weiss</groupId>
      <artifactId>ansi-terminal</artifactId>
      <version>0.0.2-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>ch.weiss</groupId>
      <artifactId>jmx-client</artifactId>
      <version>0.0.2-SNAPSHOT</version>
    </dependency>
  </dependencies>
</project>